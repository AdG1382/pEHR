<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:EHRp.ViewModels.Prescriptions"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EHRp.Views.Prescriptions.PrescriptionFormView"
             x:DataType="vm:PrescriptionFormViewModel">

    <Design.DataContext>
        <vm:PrescriptionFormViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <TextBlock Grid.Row="0" 
                   Text="New Prescription" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="20,15"
                   HorizontalAlignment="Center"/>
        
        <ScrollViewer Grid.Row="1" Margin="20">
            <Border Background="White" 
                    CornerRadius="10" 
                    BoxShadow="0 2 10 0 #20000000"
                    Padding="25">
                <StackPanel Spacing="20" MaxWidth="600">
                    <!-- Status Message -->
                    <Border Background="{DynamicResource ThemeHighlightBrush}" 
                            CornerRadius="5" 
                            Padding="15" 
                            IsVisible="{Binding IsStatusVisible}">
                        <TextBlock Text="{Binding StatusMessage}" 
                                   Foreground="{Binding IsStatusError, Converter={StaticResource BoolToErrorBrushConverter}}"
                                   TextWrapping="Wrap"/>
                    </Border>
                    
                    <!-- Form Fields -->
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" VerticalAlignment="Top">
                        <!-- Patient Name -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Patient:" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,15,0"
                                   FontWeight="Medium"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                                 Text="{Binding PatientName}" 
                                 Watermark="Enter patient name"
                                 IsReadOnly="{Binding PatientName, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                 Padding="10,8"
                                 Margin="0,0,0,10"
                                 Foreground="Black"
                                 Background="White">
                            <TextBox.Styles>
                                <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#000000"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Style>
                                <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#000000"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Style>
                            </TextBox.Styles>
                        </TextBox>
                        
                        <!-- Medication -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="Medication:" 
                                   VerticalAlignment="Center"
                                   Margin="0,20,15,0"
                                   FontWeight="Medium"/>
                        <TextBox Grid.Row="1" Grid.Column="1" 
                                 Text="{Binding Medication}" 
                                 Watermark="Enter medication name"
                                 Padding="10,8"
                                 Margin="0,0,0,10"
                                 Foreground="Black"
                                 Background="White">
                            <TextBox.Styles>
                                <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#000000"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Style>
                                <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#000000"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Style>
                            </TextBox.Styles>
                        </TextBox>
                        
                        <!-- Dosage -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="Dosage:" 
                                   VerticalAlignment="Center" 
                                   FontWeight="Medium"/>
                        <TextBox Grid.Row="2" Grid.Column="1" 
                                 Text="{Binding Dosage}" 
                                 Watermark="Enter dosage (e.g., 10mg)"
                                 Padding="10,8"
                                 Margin="0,0,0,10"
                                 Foreground="Black"
                                 Background="White">
                            <TextBox.Styles>
                                <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#000000"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Style>
                                <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#000000"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Style>
                            </TextBox.Styles>
                        </TextBox>
                        
                        <!-- Frequency -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="Frequency:" 
                                   VerticalAlignment="Center" 
                                   FontWeight="Medium"/>
                        <TextBox Grid.Row="3" Grid.Column="1" 
                                 Text="{Binding Frequency}" 
                                 Watermark="Enter frequency (e.g., twice daily)"
                                 Padding="10,8"
                                 Margin="0,0,0,10"
                                 Foreground="Black"
                                 Background="White">
                            <TextBox.Styles>
                                <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#000000"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Style>
                                <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#000000"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Style>
                            </TextBox.Styles>
                        </TextBox>
                        
                        <!-- Prescription Type (New Field) -->
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                   Text="Type:" 
                                   VerticalAlignment="Center" 
                                   FontWeight="Medium"/>
                        <ComboBox Grid.Row="4" Grid.Column="1" 
                                  SelectedIndex="0"
                                  HorizontalAlignment="Stretch"
                                  Padding="10,8"
                                  Margin="0,0,0,10"
                                  Background="White">
                            <ComboBoxItem>Regular</ComboBoxItem>
                            <ComboBoxItem>Controlled Substance</ComboBoxItem>
                            <ComboBoxItem>Over-the-counter</ComboBoxItem>
                            <ComboBoxItem>Refill</ComboBoxItem>
                            <ComboBox.Styles>
                                <Style Selector="ComboBox:pointerover /template/ Border#Background">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#000000"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Style>
                                <Style Selector="ComboBox /template/ ContentPresenter">
                                    <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
                                </Style>
                                <Style Selector="ComboBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                                <Style Selector="ComboBoxItem:pointerover /template/ ContentPresenter">
                                    <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListLowBrush}"/>
                                </Style>
                                <Style Selector="ComboBoxItem:selected /template/ ContentPresenter">
                                    <Setter Property="Background" Value="{DynamicResource SystemControlHighlightListAccentLowBrush}"/>
                                </Style>
                            </ComboBox.Styles>
                        </ComboBox>
                        
                        <!-- Start Date -->
                        <TextBlock Grid.Row="5" Grid.Column="0" 
                                   Text="Start Date:" 
                                   VerticalAlignment="Center" 
                                   FontWeight="Medium"/>
                        <DatePicker Grid.Row="5" Grid.Column="1" 
                                    SelectedDate="{Binding StartDate}"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Padding="10,8"
                                    Margin="0,0,0,10"
                                    Background="White">
                            <DatePicker.Styles>
                                <Style Selector="DatePicker:pointerover /template/ Border#Background">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#000000"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Style>
                                <Style Selector="DatePicker /template/ Button#FlyoutButton">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                                <Style Selector="CalendarDatePicker /template/ Button#FlyoutButton">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                                <Style Selector="FlyoutPresenter">
                                    <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
                                </Style>
                            </DatePicker.Styles>
                        </DatePicker>
                        
                        <!-- End Date -->
                        <TextBlock Grid.Row="6" Grid.Column="0" 
                                   Text="End Date:" 
                                   VerticalAlignment="Center" 
                                   FontWeight="Medium"/>
                        <DatePicker Grid.Row="6" Grid.Column="1" 
                                    SelectedDate="{Binding EndDate}"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Padding="10,8"
                                    Margin="0,0,0,10"
                                    Background="White">
                            <DatePicker.Styles>
                                <Style Selector="DatePicker:pointerover /template/ Border#Background">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#000000"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Style>
                                <Style Selector="DatePicker /template/ Button#FlyoutButton">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                                <Style Selector="CalendarDatePicker /template/ Button#FlyoutButton">
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                                <Style Selector="FlyoutPresenter">
                                    <Setter Property="Background" Value="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"/>
                                </Style>
                            </DatePicker.Styles>
                        </DatePicker>
                        
                        <!-- Notes -->
                        <TextBlock Grid.Row="7" Grid.Column="0" 
                                   Text="Notes:" 
                                   VerticalAlignment="Top" 
                                   Margin="0,10,0,0"
                                   FontWeight="Medium"/>
                        <TextBox Grid.Row="7" Grid.Column="1" 
                                 Text="{Binding Notes}" 
                                 Watermark="Enter additional notes"
                                 Height="80"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 Padding="10,8"
                                 Foreground="Black"
                                 Background="White">
                            <TextBox.Styles>
                                <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#000000"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Style>
                                <Style Selector="TextBox:pointerover /template/ Border#PART_BorderElement">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#000000"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Style>
                            </TextBox.Styles>
                        </TextBox>
                    </Grid>
                </StackPanel>
            </Border>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,10,0,20" 
                    Spacing="15">
            <Button Content="Save" 
                    Command="{Binding SavePrescriptionCommand}"
                    Background="#4CAF50"
                    Foreground="White"
                    Padding="25,12"
                    FontWeight="SemiBold">
                <Button.Styles>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="#388E3C"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </Button.Styles>
            </Button>
            
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    Background="#F44336"
                    Foreground="White"
                    Padding="25,12"
                    FontWeight="SemiBold">
                <Button.Styles>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="#D32F2F"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </Button.Styles>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>