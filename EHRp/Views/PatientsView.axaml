<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:EHRp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="EHRp.Views.PatientsView"
             x:DataType="vm:PatientsViewModel">
    
    <Design.DataContext>
        <vm:PatientsViewModel/>
    </Design.DataContext>
    
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Patients" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>
            
            <!-- Search Bar -->
            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,20">
                <TextBox Grid.Column="0" 
                         Watermark="Search patients..." 
                         Text="{Binding SearchText}"/>
                <Button Grid.Column="1" 
                        Content="Search" 
                        Command="{Binding SearchPatientsCommand}" 
                        Margin="10,0,0,0"/>
            </Grid>
            
            <!-- Patients List -->
            <Border Background="{DynamicResource ThemeBackgroundBrush}" 
                    BorderBrush="{DynamicResource ThemeBorderBrush}" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="15" 
                    Margin="0,0,0,20">
                <Grid RowDefinitions="*,Auto">
                    <DataGrid Grid.Row="0"
                              ItemsSource="{Binding Patients}" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True" 
                              SelectedItem="{Binding SelectedPatient}"
                              Height="400">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="200"/>
                            <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="80"/>
                            <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="100"/>
                            <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNumber}" Width="150"/>
                            <DataGridTextColumn Header="Last Visit" Binding="{Binding LastVisit}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Error Message -->
                    <TextBlock Grid.Row="1"
                               Text="{Binding ErrorMessage}" 
                               Foreground="Red" 
                               HorizontalAlignment="Center" 
                               Margin="0,10,0,0" 
                               IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                </Grid>
            </Border>
            
            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Spacing="10">
                <Button Content="Add New Patient" 
                        Command="{Binding AddNewPatientCommand}" 
                        Background="{DynamicResource ThemeSuccessBrush}"/>
                <Button Content="View Details" 
                        Command="{Binding ViewPatientDetailsCommand}" 
                        CommandParameter="{Binding SelectedPatient.Id}"
                        IsEnabled="{Binding SelectedPatient, Converter={x:Static ObjectConverters.IsNotNull}}"/>
                <Button Content="Loading..." 
                        IsVisible="{Binding IsLoading}"
                        IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>